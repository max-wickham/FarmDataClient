        <local:SavedThreadsPage Title="{x:Static resx:Strings.SavedPosts}"/>
        <local:TestPage Title="Test"/> -->
    </TabbedPage.Children>
    <TabbedPage.ToolbarItems>
        <ToolbarItem x:Name="Profile" Order="Primary" Text="{x:Static resx:Strings.Profile}" Priority="0"/>
    </TabbedPage.ToolbarItems>
</TabbedPage>